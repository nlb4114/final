    <title>Hostel Universe!</title>

    <style>

    .homepage {
            text-align: center;
            }

    .city {
            text-align: center;
            }
    .city h1{
        text-decoration: underline;
    }

    .hostel h1 {
        text-align: center;
    }

    .address  {
        text-align: left;
    }

    .property p{
        text-align: left;
        text-indent: 2em;
    }

    .buttons p{
        text-align: center;
    }

    button {
        text-align: center;
    }

    .responsive {
        
        width: 100%;
        max-width: 400px;
        height: auto;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

     .responsive1 {
        
        width: 100%;
        max-width: 200px;
        height: auto;
        display: block;
        margin-left: auto;
        margin-right: auto;
        float: none;
    }
    
    .recommend {
        text-align: center;
    }
    

    </style>

  </head>
  <body>

    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
            <span class="navbar-brand mt-2 h1">HostelUniverse
            </span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/users/new">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logins/new">Sign In</a>
                        </li>
                    </ul>
                </div>
                    <% if @current_user %>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a href="/logout" class="nav-link">Logout</a>
                            </li>
                            <li class="navbar-text">
                                Logged in as <%= @current_user[:name] %>
                            </li>
                        </ul>
                    <% end %>
                
            
    </nav>

    <div class="container mt-5">
      <%= yield %>
    </div>

